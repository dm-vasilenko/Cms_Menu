<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">edit_link_form.edit_link_form_data_source</item>
            <item name="deps" xsi:type="string">edit_link_form.edit_link_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Link Form</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">link_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Web4Pro\Menu\Block\Adminhtml\BackButton"/>
            <button name="save" class="Web4Pro\Menu\Block\Adminhtml\SaveLink"/>
            <button name="reset" class="Web4Pro\Menu\Block\Adminhtml\ResetButton"/>
            <button name="delete" class="Web4Pro\Menu\Block\Adminhtml\DeleteButton"/>
        </buttons>
        <namespace>link_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>edit_link_form.edit_link_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="edit_link_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Web4Pro\Menu\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">edit_link_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">link_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="cms_menu/index/editsave" />
        </settings>
    </dataSource>

    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">General</item>
            </item>
        </argument>

        <!-- This field represents form id and is hidden -->
        <field name="link_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Link Name</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">link</item>
                    <item name="require" xsi:type="boolean">true</item>
                    <item name="dataScope" xsi:type="string">link_name</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <!-- This field has data type 'text' and standard 'input' form element and looks like input -->
        <field name="cms_page_link">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Web4Pro\Menu\UI\Component\CmsPageSelect</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Cms Pages</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">link</item>
                    <item name="sortOrder" xsi:type="number">5</item>
                    <item name="dataScope" xsi:type="string">cms_page_link</item>
                </item>
            </argument>
        </field>


        <!-- This field has data type 'text' and standard 'input' form element and looks like input -->
        <field name="is_enabled" formElement="select">
            <settings>
                <dataType>int</dataType>
                <label translate="true">Is enabled</label>
                <dataScope>is_enabled</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">1</item>
                                <item name="label" xsi:type="string">Yes</item>
                            </option>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">0</item>
                                <item name="label" xsi:type="string">No</item>
                            </option>
                        </options>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="link_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">link</item>
                </item>
            </argument>
        </field>

    </fieldset>
</form>